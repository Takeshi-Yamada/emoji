<h2>📩 パスワードリセット</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "リセットメールを送る", class: "btn-create" %>
  </div>
<% end %>
