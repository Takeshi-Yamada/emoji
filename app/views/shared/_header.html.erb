  <a href="/" class="header-logo">🧩Emoji Link</a>

  <!-- ナビメニュー -->
  <nav class="header-nav">
    <% if user_signed_in? %>
      <%= link_to '✏️ クイズを作る', new_question_path, class: 'btn-create' %>
      <%= link_to 'マイページ', user_path(current_user), class: "header-btn" %>
