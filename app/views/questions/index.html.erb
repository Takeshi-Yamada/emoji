<h1>❓絵文字クイズ一覧</h1>
<% if @questions.any? %>
  <div class="search-and-pagination">
    <%= render 'search', q: @q, url: questions_path %>
    <div class="pagination-container">
      <%= paginate @questions %>
    </div>
  </div>
  <div class="quiz-list">
    <% @questions.each do |question| %>
      <div class="quiz-card-wrapper">
        <%= link_to question_path(question), class: "quiz-card-link" do %>
          <div class="quiz-card">
            <h2><%= question.content %></h2>
            <p>作者：<%= question.user.name %></p>
          </div>
        <% end %>
        <div class="tag-area">
          <%= render 'tag', question: question %>
        </div>
      </div>
    <% end %>
  </div>
    <div class="pagination-container-under">
      <%= paginate @questions %>
    </div>
<% else %>
  <%= render 'search', q: @q, url: questions_path %>
  <p>該当のクイズはありません！</p>
<% end %>

<h1>👑人気のタグ</h1>

<% ActsAsTaggableOn::Tag.most_used(10).each do |tag| %>
  <%= link_to tag.name, questions_path(tag_name: tag.name), class: "tag-badge" %>
<% end %>
