<%= form_with(model: question, local: true, data: { turbo: false }) do |f| %>
  <% if question&.errors&.any? %>
    <div class="alert alert-danger">
      <ul>
        <% question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, "クイズ：絵文字のみ、6個まで" %><br>
    <%= f.text_field :content, class: "form-control", placeholder: "例: 📓🍎👿" %>
  </div>

  <div class="form-group">
    <%= f.label :correct, "答え（日本語）" %><br>
    <%= f.text_field :correct, class: "form-control", placeholder: "例: デスノート" %>
  </div>

  <%= f.submit question.new_record? ? "クイズを作成する 🚀" : "保存する 💾", class: "btn-create" %><br><br>
<% end %>